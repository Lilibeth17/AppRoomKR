<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    tools:context=".ActivityLogin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="203dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="411dp"
        android:src="@drawable/logor"
        app:layout_constraintBottom_toTopOf="@+id/progressBarlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:id="@+id/logincorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="CORREO"
        android:inputType="textEmailAddress"
        android:textColor="#050000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/freckle_face"
        app:layout_constraintBottom_toTopOf="@+id/logincontraseña"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <EditText
        android:id="@+id/logincontraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:hint="CONTRASEÑA"
        android:inputType="textPassword"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/freckle_face"
        app:layout_constraintBottom_toTopOf="@+id/btnlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logincorreo" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="213dp"
        android:layout_height="61dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/logindark"
        android:text="INICIAR SESIÓN"
        android:textColor="#B71C1C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/freckle_face"
        app:layout_constraintBottom_toTopOf="@+id/olvcontra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logincontraseña" />

    <TextView
        android:id="@+id/olvcontra"
        android:layout_width="282dp"
        android:layout_height="0dp"
        android:layout_marginBottom="153dp"
        android:background="#00FFFFFF"
        android:text="Olvidaste tu contraseña?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/freckle_face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnlogin" />

    <ProgressBar
        android:id="@+id/progressBarlogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="91dp"
        android:layout_height="47dp"
        android:layout_marginBottom="55dp"
        android:progressDrawable="@drawable/logindark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>